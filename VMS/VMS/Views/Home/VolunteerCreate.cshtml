@model VMS.Models.VolunteerInfo
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width-device-width" />
    <title>VolunteerCreate</title>
    <link rel="stylesheet" href="~/css/styles.css" /> @*need to change to our styles sheet *@
</head>
<body>
    <nav class="TOPnavbar">
        <ul>
            <li><a asp-action="Index">Home</a></li>
            <li><a asp-action="VolunteerCreate">Create Volunnteer Profile</a></li>
        @*  <li><a asp-action="CustomerProfile">Customer Profile</a></li> change to our volunteer account view page *@
       @*   <li><a asp-action="AccountEdit">Edit Account</a></li>  change to the volunteers way to edit *@

        </ul>
    </nav>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Create Volunteer Account</h4></div>
        <div class="panel-body">
            <form class="p-a-1" asp-action="VolunteerCreate" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="FirstName">First name:</label>
                    <input class="form-control" asp-for="FirstName" />
                </div>
                <div class="form-group">
                    <label asp-for="LastName">Last Name:</label>

                    <input class="form-control" asp-for="LastName" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">Your email:</label>
                    <input class="form-control" asp-for="Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password:</label>
                    <input class="form-control" asp-for="Password" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm Password:</label>
                    <input class="form-control" asp-for="ConfirmPassword" />
                </div>
                <div class="form-group">
                    <label asp-for="Username">Username:</label>
                    <input class="form-control" asp-for="Username" />
                </div>
                <div class="form-group">
                    <label asp-for="Addressone">Address Line 1:</label>
                    <input class="form-control" asp-for="Addressone" />
                </div>
                <div class="form-group">
                    <label asp-for="Addresstwo">Address Line 2:</label>
                    <input class="form-control" asp-for="Addresstwo" />
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone number:</label>
                    <input class="form-control" asp-for="PhoneNumber" />
                </div>
                <div class="form-group">
                    <label asp-for="State">State:</label>
                    <input class="form-control" asp-for="State" />
                </div>
                <div class="form-group">
                    <label asp-for="City">City:</label>
                    <input class="form-control" asp-for="City" />
                </div>
                <div class="form-group">
                    <label asp-for="Country">Country:</label>
                    <input class="form-control" asp-for="Country" />
                </div>
                <div class="form-group">
                    <label asp-for="Zipcode">Zip Code:</label>
                    <input class="form-control" asp-for="Zipcode" />
                </div>
                @*below here lies non basic volunteer information*@
                <div class="form-group">
                    <label asp-for="PW">Preffered Work:</label>
                    <input class="form-control" asp-for="PW" />
                </div>
                <div class="form-group">
                    <label asp-for="SI">Skills Interest:</label>
                    <input class="form-control" asp-for="SI" />
                </div>
                <div class="form-group">
                    <label asp-for="AID">Availibity ID:</label>
                    <input class="form-control" asp-for="AID" />
                </div>
                <div class="form-group">
                    <label asp-for="EID">Education ID:</label>
                    <input class="form-control" asp-for="EID" />
                </div>
                <div class="form-group">
                    <label asp-for="CL">Current Licenses:</label>
                    <input class="form-control" asp-for="CL" />
                </div>
                <div class="form-group">
                    <label asp-for="ECFN">Emergency Contact First Name:</label>
                    <input class="form-control" asp-for="ECFN" />
                </div>
                <div class="form-group">
                    <label asp-for="ECLN">Emergency Contact Last Name:</label>
                    <input class="form-control" asp-for="ECLN" />
                </div>
                <div class="form-group">
                    <label asp-for="ECHP">Emergency Contact Home Telephone:</label>
                    <input class="form-control" asp-for="ECHP"/>
                </div>
                <div class="form-group">
                    <label asp-for="ECWP">Emergency Contact Work Telephone:</label>
                    <input class="form-control" asp-for="ECWP" />
                </div>
                <div class="form-group">
                    <label asp-for="ECCP">Emergency Contact Cell Phone Number:</label>
                    <input class="form-control" asp-for="ECCP" />
                </div>
                <div class="form-group">
                    <label asp-for="ECE">Emergency Contact Email:</label>
                    <input class="form-control" asp-for="ECE" />
                </div>
                <div class="form-group">
                    <label asp-for="ECA">Emergency Contact Street Address:</label>
                    <input class="form-control" asp-for="ECA" />
                </div>
                <div class="form-group">
                    <label asp-for="ECC">Emergency Contact City:</label>
                    <input class="form-control" asp-for="ECC" />
                </div>
                <div class="form-group">
                    <label asp-for="ECSI">Emergency Contact State ID:</label>
                    <input class="form-control" asp-for="ECSI" />
                </div>
                <div class="form-group">
                    <label asp-for="ECZ">Emergency Contact Zipcode:</label>
                    <input class="form-control" asp-for="ECZ" />
                </div>
                <div class="form-group">
                    <label asp-for="DLN">Drivers Lisence Number:</label>
                    <input class="form-control" asp-for="DLN" />
                </div>
                <div class="form-group">
                    <label asp-for="SSN">Social Security Number:</label>
                    <input class="form-control" asp-for="SSN" />
                </div>
                <div class="form-group">
                    <label asp-for="VSID">Volunteer status ID:</label>
                    <input class="form-control" asp-for="VSID" />
               </div>
                             @*button to submit the form*@
                <div class="text-center">
                    <button class="btn btn-group-vertical" type="submit">
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
